@model LoginViewModel
@{ 
    ViewData["Title"] = "Login";
    ViewData[ViewConstants.kNavbarIndexPairKey] =
        new LeftNavbar.IndexPair
        { IndexWhenUserAnonymus = NavbarModel.NonAuthorizableItemsIndex.Login };
}

<div class="row">
    <div class="col-lg-6 col-md-8 col-sm-8">
        <h5>Login to access your presentations</h5>
        <h6>Don't have an account yet? <a asp-controller="@nameof(AccountController).WithoutControllerPart()" 
                                          asp-action="@nameof(AccountController.Register)">Creating one is quick and easy</a></h6>
        <form method="post" asp-antiforgery="true">

            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <label>Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>

            <div class="form-group">
                <label>Remember me</label>
                <input asp-for="RememberMe" />
            </div>

            <div>
                <input type="submit" value="Login" />
            </div>
        </form>

    </div>
</div>