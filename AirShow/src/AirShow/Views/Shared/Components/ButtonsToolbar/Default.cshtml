@model ButtonsToolbarModel

<div class="row">
    <div class="categoryButtonsContainer" style="">

        @if (Model.ButtonInfos != null)
        {
            for (int i = 0; i < Model.ButtonInfos.Count; i++)
            {
                var item = Model.ButtonInfos[i];
                if (i == Model.HighlightedIndex)
                {
                    <a class="btn btn-primary categoryButton" href="@item.Href">@item.Name</a>
                }
                else
                {
                    <a class="btn btn-outline-primary categoryButton" href="@item.Href">@item.Name</a>
                }

            }
        }

    </div>
</div>
